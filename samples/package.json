{
  "private": true,
  "name": "symbol-dojo-samples",
  "version": "0.0.1",
  "description": "Symbol Dojo - Sample scripts for learning symbol-sdk.",
  "keywords": [
    "nem",
    "nem2",
    "catapult",
    "symbol"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/44uk/symbol-dojo.git"
  },
  "author": "Yoshiyuki Ieyama",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "generate:dotenv": "ts-node util/generateDotenv.ts",
    "prettier": "prettier --write '**/*.{ts,js,json,md,html}'"
  },
  "dependencies": {
    "@js-joda/core": "^3.2.0",
    "consola": "^2.15.3",
    "dotenv": "^8.2.0",
    "hi-base32": "^0.5.1",
    "js-sha3": "git+https://github.com/Propine/js-sha3.git",
    "rxjs": "^6.6.7",
    "symbol-sdk": "^1.0.0",
    "utf8": "^3.0.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
